<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :イベント名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :開催地 %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :イベント詳細 %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :日付 %>
    <%= form.date_select :day %>
  </div>

  <div class="field">
    <%= form.label :ジャンル %>
    <%= form.select :genre_id, Genre.all.map{|o| [o.name,o.id]} %>
  </div>


  <div class="field">
    <%= form.file_field :image %>
  </div>


  <div class="actions">
    <%= form.submit '送信'%>
  </div>
<% end %>
