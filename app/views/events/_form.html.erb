<%= form_with(model: event, local: true, html: {class: 'form-horizontal',role:'form'}) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label :name, class: "col-sm-2 control-label"%>
    <div class='col-sm-10'>

    <%= form.text_field :name %>
    </div>
  </div>


  <div class="form-group">
    <%= form.label :address, class: "col-sm-2 control-label" %>
    <div class='col-sm-10'>

    <%= form.text_field :address %>
    </div>
  </div>


  <div class="form-group">
    <%= form.label :content, class: "col-sm-2 control-label" %>
    <div class='col-sm-10'>

    <%= form.text_area :content %>
    </div>
  </div>


  <div class="form-group">
    <%= form.label :day, class: "col-sm-2 control-label"%>
    <div class='col-sm-10'>

    <%= form.date_select :day %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :genre_id, class: "col-sm-2 control-label" %>
    <div class='col-sm-10'>

    <%= form.select :genre_id, Genre.all.map{|o| [o.name,o.id]} %>
    </div>
  </div>


  <div class="field">
    <%= form.file_field :image %>
  </div>


  <div class="actions">

    <div class="form-group">
      <div class='col-sm-offset-2 col-sm-10'>
        <%= form.submit "送信", class: 'btn btn-primary' %>
        <%= link_to 'Back', :back, class: 'btn btn-secondary' %>

      </div>
    </div>

  </div>
<% end %>
